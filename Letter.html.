    <script>
        function openEnvelope() {
            const envelope = document.querySelector('.envelope');
            const letterPaper = document.querySelector('.letter-paper');
            const hearts = document.querySelectorAll('.heart');
            const kissesContainer = document.querySelector('.kisses-container');

            envelope.classList.add('open');
            setTimeout(() => {
                letterPaper.classList.add('show');
                hearts.forEach(heart => {
                    heart.style.animationPlayState = 'running';
                    heart.style.opacity = '1';
                });
            }, 500);
        }

        // Script to generate falling kisses
        const kissesContainer = document.querySelector('.kisses-container');
        const numKisses = 30; // Number of kisses
        const emojis = ['üòò', 'üíã', '‚ù§Ô∏è', 'üíñ'];

        for (let i = 0; i < numKisses; i++) {
            const kiss = document.createElement('span');
            kiss.classList.add('kiss');
            kiss.textContent = emojis[Math.floor(Math.random() * emojis.length)];
            kiss.style.left = `${Math.random() * 100}vw`;
            kiss.style.animationDuration = `${Math.random() * 5 + 5}s`;
            kiss.style.animationDelay = `${Math.random() * 5}s`;
            kissesContainer.appendChild(kiss);
        }
    </script>

